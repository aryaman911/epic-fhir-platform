# Server Configuration
PORT=5000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/careflow_db

# EPIC FHIR Configuration
# Get these from https://fhir.epic.com/Developer/Apps
EPIC_CLIENT_ID=your_epic_client_id_here
EPIC_CLIENT_SECRET=your_epic_client_secret_here
EPIC_FHIR_BASE_URL=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
EPIC_AUTH_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/authorize
EPIC_TOKEN_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/token
EPIC_REDIRECT_URI=http://localhost:3000/callback

# AI APIs
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_FINE_TUNED_MODEL=

# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# SendGrid for Email
# Get from https://sendgrid.com/
SENDGRID_API_KEY=SG.your-sendgrid-key-here
FROM_EMAIL=noreply@careflow.com
FROM_NAME=CareFlow Analytics

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Encryption Key (for storing sensitive data)
ENCRYPTION_KEY=32-character-encryption-key-here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug
